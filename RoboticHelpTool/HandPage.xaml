        <TextBox x:Name="F23_Value_Matrix" HorizontalAlignment="Left" Height="23" Margin="475,332,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="2|3" Text="2|3" />
        <TextBox x:Name="F24_Value_Matrix" HorizontalAlignment="Left" Height="23" Margin="577,332,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="2|4" Text="2|4" />
        <TextBox x:Name="F31_Value_Matrix" HorizontalAlignment="Left" Height="23" Margin="267,360,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="3|1" Text="3|1" />
        <TextBox x:Name="F32_Value_Matrix" HorizontalAlignment="Left" Height="23" Margin="371,360,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="3|2" Text="3|2" />
        <TextBox x:Name="F33_Value_Matrix" HorizontalAlignment="Left" Height="23" Margin="475,360,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="3|3" Text="3|3" />
        <TextBox x:Name="F34_Value_Matrix" HorizontalAlignment="Left" Height="23" Margin="577,360,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="3|4" Text="3|4" />
        <TextBox x:Name="F41_Value_Matrix" HorizontalAlignment="Left" Height="23" Margin="267,388,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="4|1" Text="4|1" />
        <TextBox x:Name="F42_Value_Matrix" HorizontalAlignment="Left" Height="23" Margin="371,388,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="4|2" Text="4|2" />
        <TextBox x:Name="F43_Value_Matrix" HorizontalAlignment="Left" Height="23" Margin="475,388,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="4|3" Text="4|3" />
        <TextBox x:Name="F44_Value_Matrix" HorizontalAlignment="Left" Height="23" Margin="577,388,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="4|4" Text="4|4" />
        <Button Style="{StaticResource Umrechnen_Button}" HorizontalAlignment="Left" Margin="45,48,0,0" VerticalAlignment="Top" Width="120" Click="Button_Einlesen"/>
        <Label Content="Bitte nur einen Typ komplett ausfüllen!" HorizontalAlignment="Left" Margin="267,10,0,0" VerticalAlignment="Top" Width="405" FontFamily="Calibri" FontSize="16" FontWeight="Bold"/>
