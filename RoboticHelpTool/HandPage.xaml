        <TextBox x:Name="X_Value_KUKA" HorizontalAlignment="Left" Height="23" Margin="267,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Tag="X" Text="X" />
        <TextBox x:Name="Y_Value_KUKA" HorizontalAlignment="Left" Height="23" Margin="406,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Tag="Y" Text="Y" />
