<Page x:Class="RoboticHelpTool.HandPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RoboticHelpTool"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="792"
      Title="HandPage">

    <Grid>
        <Button Style="{StaticResource Einlesen_Button}" Width="60" Height="240" Margin="731,240,1,0" Click="Button_Einlesen" Visibility="Hidden"/>
