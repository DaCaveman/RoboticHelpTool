        <TextBox x:Name="rY_Value_KUKA" HorizontalAlignment="Left" Height="23" Margin="406,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Tag="B(rY)" Text="B(rY)" />
        <TextBox x:Name="rX_Value_KUKA" HorizontalAlignment="Left" Height="23" Margin="552,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Tag="C(rX)" Text="C(rX)" />
        <Label Content="Eingabe einer Location mit RPY-Winkel (KUKA)" HorizontalAlignment="Left" Margin="267,40,0,0" VerticalAlignment="Top" Width="405" FontSize="16" FontFamily="Calibri"/>
        <TextBox x:Name="X_Value_ABB" HorizontalAlignment="Left" Height="23" Margin="267,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Tag="X" Text="X" />
        <TextBox x:Name="Y_Value_ABB" HorizontalAlignment="Left" Height="23" Margin="406,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Tag="Y" Text="Y" />
        <TextBox x:Name="Z_Value_ABB" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="552,190,0,0" Tag="Z" Text="Z" />
        <TextBox x:Name="Q1_Value_ABB" HorizontalAlignment="Left" Height="23" Margin="267,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="Q1" Text="Q1" />
        <TextBox x:Name="Q2_Value_ABB" HorizontalAlignment="Left" Height="23" Margin="371,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="Q2" Text="Q2" />
        <TextBox x:Name="Q3_Value_ABB" HorizontalAlignment="Left" Height="23" Margin="475,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="Q3" Text="Q3" />
        <TextBox x:Name="Q4_Value_ABB" HorizontalAlignment="Left" Height="23" Margin="577,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="Q4" Text="Q4" />
        <Label Content="Eingabe einer Location mit Quaternien" HorizontalAlignment="Left" Margin="267,154,0,0" VerticalAlignment="Top" Width="405" FontSize="16" FontFamily="Calibri"/>
        <Label Content="Eingabe einer Location Matrix" HorizontalAlignment="Left" Margin="267,268,0,0" VerticalAlignment="Top" Width="405" FontSize="16" FontFamily="Calibri"/>
        <TextBox x:Name="F11_Value_Matrix" HorizontalAlignment="Left" Height="23" Margin="267,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="1|1" Text="1|1" />
        <TextBox x:Name="F12_Value_Matrix" HorizontalAlignment="Left" Height="23" Margin="371,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Tag="1|2" Text="1|2" />
