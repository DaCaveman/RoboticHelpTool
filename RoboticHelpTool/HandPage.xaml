        <Button Style="{StaticResource RelBase_Button}" HorizontalAlignment="Left" Margin="45,132,0,0" VerticalAlignment="Top" Width="120" Click="XYZShift_Click"/>
        <Button Style="{StaticResource RelTool_Button}" HorizontalAlignment="Left" Margin="45,161,0,0" VerticalAlignment="Top" Width="120" Click="RelTool_Click"/>
        <Button Style="{StaticResource Mirror_Button}" HorizontalAlignment="Left" Margin="45,190,0,0" VerticalAlignment="Top" Width="120" Click="Mirror_Click"/>
        <Button Style="{StaticResource Transformation_Button}" HorizontalAlignment="Left" Margin="45,269,0,0" VerticalAlignment="Top" Width="120" Click="Multi_Click"/>
        <Button Style="{StaticResource TCPCalc_Button}" HorizontalAlignment="Left" Margin="45,348,0,0" VerticalAlignment="Top" Width="120" Click="OnePosTCP_Click"/>
